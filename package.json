{
  "name": "spy4js",
  "version": "4.0.0-beta.0",
  "description": "Smart, compact and powerful spy test framework",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/spy4js"
  },
  "keywords": [
    "spy",
    "test",
    "jest",
    "vitest",
    "TypeScript"
  ],
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "license": "MIT",
  "scripts": {
    "dist": "rm -rf dist && rollup -c && tsc -p tsconfig.publish.json",
    "lint": "pnpm lint:es && pnpm lint:ts",
    "lint:es": "eslint --ext .ts src/ test/ --max-warnings 0",
    "lint:ts": "tsc",
    "test": "pnpm test:jest && pnpm test:vi",
    "test:jest": "jest --all --coverage --color",
    "test:vi": "vitest run",
    "test:update": "jest -u",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "serialize-as-code": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@sucrase/jest-plugin": "^3.0.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.3.0",
    "sucrase": "^3.28.0",
    "typescript": "^4.8.4",
    "vitest": "^0.29.3"
  }
}
