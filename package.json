{
  "name": "spy4js",
  "version": "4.0.0-beta.2",
  "description": "Smart, compact and powerful spy test framework",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/spy4js"
  },
  "keywords": [
    "spy",
    "test",
    "jest",
    "vitest",
    "TypeScript"
  ],
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "license": "MIT",
  "scripts": {
    "dist": "vite build && pnpm dist:ts",
    "dist:ts": "tsc -p tsconfig.publish.json",
    "lint": "pnpm lint:es && pnpm lint:ts",
    "lint:es": "eslint --ext .ts src/ test/ --max-warnings 0",
    "lint:ts": "tsc",
    "test": "pnpm test:jest && pnpm test:vi && pnpm test:bun",
    "test:jest": "jest --all --color",
    "test:vi": "VITE_CJS_IGNORE_WARNING=true vitest run --coverage",
    "test:bun": "bun test",
    "test:update": "jest -u",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "serialize-as-code": "^2.0.2"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^3.0.0",
    "@testing-library/react": "^14.1.2",
    "@types/bun": "^1.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.2.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  }
}
