{
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/flowtype"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "plugins": [
    "jest",
    "flowtype",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "useTabs": false,
      "printWidth": 80,
      "tabWidth": 4,
      "singleQuote": true,
      "trailingComma": "es5",
      "jsxBracketSameLine": true,
      "parser": "flow"}],
    "no-unused-vars": 2
  }
}
